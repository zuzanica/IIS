{block content}
	
	<h2> Zamestnanci </h2>

	<a n:href="Staff:new" class="glyphicon glyphicon-plus" aria-hidden="true"></a>
	<a n:href="Staff:new">Pridať zamestnanca</a>


	<div class="staff">
	    <table class="table table-hover">
  		<tr>
    		<th>id</td>
    		<th>login</td>
    		<th>meno</td> 
    		<th>priezvisko</td>
    		<th>prac. pozícia</td>
    		<th>smena</td>
  		</tr>
	    {foreach $staff as $person}
	        <tr>
		        <td>{$person->id}</td> 
		        <td>{$person->login}</td>
		        <td>{$person->name}</<td>
		        <td>{$person->lastname}</<td>
		        <td>{$person->position}</<td>
		        <td>{$person->shift}</<td>
		        {if $person->position != 'admin'}
					<td><a n:href="edit $person->id">Upravit zanestnanca</a></td>
					<td><a n:href="delete $person->id" n:if="$user->isAllowed(delete)">Odstrániť zamestnanca</a></td>
				{/if}
		        </td>

	        </tr>
	        
	    {/foreach}
	    </table>
	</div>

{/block}