		<h2>Užívatelia v systéme</h2>
		<div class="users">
		    <table class="table table-hover">
	  		<tr>
	    		<th>id</td>
	    		<th>id zamestnanca</td>
	    		<th>login</td> 
	    		<th>heslo</td>
	    		<th>rola</td>
	  		</tr>
		    {foreach $users as $user}
